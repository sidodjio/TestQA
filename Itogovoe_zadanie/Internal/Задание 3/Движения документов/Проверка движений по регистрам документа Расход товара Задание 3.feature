		| 'Регистратор'            | 'Номер строки' | 'Покупатель'      | 'Товар'    | 'Количество' | 'Сумма' |
		| 'Продажа 000000107 от *' | '1'            | 'Магазин "Обувь"' | 'Ботинки'  | '3,00'       | '3,00'  |
		| 'Продажа 000000107 от *' | '2'            | 'Магазин "Обувь"' | 'Доставка' | '1,00'       | '1,00'  |

